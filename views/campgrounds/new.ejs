            <h1>Create New Campground</h1>
        </header>
        <main>
            <form action="/campgrounds" method="POST">
                <div>
                    <label for="location">Location:</label>
                    <input type="text" id="location" name="campground[location]" required>
                </div>
                <div>
                    <label for="image">Image URL:</label>
                    <input type="text" id="image" name="campground[image]" required>
                </div>
                <div>
                    <label for="description">Description:</label>
                    <textarea id="description" name="campground[description]" required></textarea>
                </div>
                <button type="submit">Create Campground</button>
            </form>
