<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <title></title>
        <meta name="description" content="">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="">
    </head>
    <body>
        <header>
            <h1>Campgrounds</h1>
        </header>
        <main>
            <a href="/campgrounds/new">Create New Campground</a>
            <h2>Available Campgrounds</h2>
            <ul>
                <% campgrounds.forEach(campground => { %>
                    <li>
                        <a href="/campgrounds/<%= campground._id %>"><%= campground.location %></h3></a>
                        <img src="<%= campground.image %>" alt="<%= campground.location %>">
                        <p><%= campground.description %></p>
                    </li>
                <% }); %>
            </ul>
            <a href="/">Back to Home</a>
        </main>
        <footer>
            <p>&copy; 2023 YelpCamp</p>
        </footer>
    </body>
</html>